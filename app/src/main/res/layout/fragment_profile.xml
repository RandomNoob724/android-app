<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent">

    <TextView
        android:text="Hello world"
        android:id="@+id/profile_username"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_birthdate"
        android:layout_height="0dp"/>

    <TextView
        android:text="Hello world"
        android:id="@+id/profile_birthdate"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/profile_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_weight"
        android:layout_height="0dp"/>

    <TextView
        android:text="Hello world"
        android:id="@+id/profile_weight"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/profile_birthdate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/profile_goalweight"
        android:layout_height="0dp"/>

    <TextView
        android:text="Goal Weight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/profile_goalweight"
        app:layout_constraintTop_toBottomOf="@id/profile_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>